-use yii\helpers\Html
-use yii\bootstrap4\ActiveForm
-use kartik\date\DatePicker
-$view->title = 'Edit plan - Writenator';
.plan-create.container
    h1 !=Html::encode($view->title)
    .row
        .col-lg-5
            -$form = ActiveForm::begin(['id' => 'edit-form'])
            !=$form->field($model, 'title')
            !=DatePicker::widget(['model' => $model, 'type' => DatePicker::TYPE_RANGE,'attribute' => 'start','attribute2' => 'end','separator' => '<i class="glyphicon glyphicon-resize-horizontal"></i>','layout' => $layout3,'pluginOptions' => ['autoclose' => true,'format' => 'yyyy-mm-dd']])
            !=$form->field($model, 'goal')
            .form-group
                !=Html::submitButton('Update', ['class' => 'btn btn-primary', 'name' => 'update-button'])
                -ActiveForm::end()
